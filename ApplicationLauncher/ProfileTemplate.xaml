<UserControl x:Class="ApplicationLauncher.ProfileTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApplicationLauncher"
             mc:Ignorable="d" 
             d:DesignHeight="100
             " d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="3,3,3,0">
        <Grid Background="#FFFFB7B7">
            <Button x:Name="LaunchButton" Content="Launch   ▶" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Height="40" Width="113" Click="LaunchButton_Click"/>
            <Button x:Name="EditButton" Content="Edit" HorizontalAlignment="Left" Margin="10,47,0,10" Width="100" Click="EditButton_Click" Height="40"/>
            <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="142,47,0,10" Width="100" Click="DeleteButton_Click" Height="40"/>
            <Label x:Name="ProfileNameLabel" Content="ProfileName" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="31" Width="232" FontSize="18"/>

        </Grid>
    </Border>
</UserControl>
